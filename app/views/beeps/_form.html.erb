
<% turbo_frame_tag "new_beep" do %>
<%= form_with(model: beep ||= Beep.new) do |form| %>
  <div class="p-2 shadow">
    <% if beep.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(beep.errors.count, "error") %> prohibited this beep from being saved:</h2>

        <ul>
          <% beep.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="flex flex-col">
      <%= form.label :text %>
      <%= form.text_area :text, class: "bg-white border" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :author %>
      <%= form.text_field :author, class: "bg-white border" %>
    </div>

    <div class="flex flex-row items-center">
      <%= form.label "Are you a robot?" %>
      <%= form.check_box :robot, checked: true, class: "mx-2" %>
    </div>

    <div class="actions">
      <%= form.submit class: "cursor-pointer w-max my-4 block flex-none bg-gray-900 hover:bg-gray-700 text-white text-lg leading-6 font-semibold py-3 px-6 border border-transparent rounded-xl focus:ring-2 focus:ring-offset-2 focus:ring-offset-white focus:ring-gray-900 focus:outline-none transition-colors duration-200" %>
    </div>
  </div>
<% end %>
<% end %>
